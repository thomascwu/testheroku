<!-- Signup Section -->
<section id="signup" class="signup-section">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-lg-8 mx-auto text-center">
        <br><br><br><br>
        <h2 class="animated rotateIn text-white mb-5">SUBSCRIBE TO RECEIVE UPDATES!</h2>
        <span id="emailsubscription" style="color: #62c6bb; font-size: 1.5em; display:none;">THANK YOU FOR SUBSCRIBING!</span>
        <br>
        <input id="emailaddressfield" type="email" class="form-control flex-fill mr-0 mr-sm-2 mb-3 mb-sm-0" id="inputEmail" placeholder="Enter email address">
        <br>
        <button type="button" class="btn btn-primary" onclick="document.getElementById('emailsubscription').style.display = 'block';">  
          SUBSCRIBE
        </button>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <button type="button" class="btn btn-primary" onclick="document.getElementById('emailaddressfield').value = '';
                                                               document.getElementById('emailsubscription').style.display = 'none';">
          CLEAR
        </button>
      </div>
    </div>
  </div>
</section>

